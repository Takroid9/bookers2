
<main>

  <p id="notice"></p>
  <div class="container">
    <div class="row">

      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        
        <% if @booker.errors.any? %>
          <div id="error_explanation">
  
            <h2><%= @booker.errors.count %> errors prohibited this book from being saved: </h2>
  
            <ul>
              <% @booker.errors.full_messages_for(:title).each do |message| %>
                <li><%= message %></li>
              <% end %>
  
              <% @booker.errors.full_messages_for(:body).each do |message| %>
                <li><%= message%></li>
              <% end %>
            </ul>
  
          </div>
        <% end %>


        <%= form_with model:@booker, local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
        <% end %>

        <%= link_to 'Show', book_path(@booker) %>
        |
        <%= link_to 'Back', books_path %>
      </div>
    </div>

  </div>
</main>

<%= render "homes/footer" %>